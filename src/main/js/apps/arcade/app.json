{
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "toolset",
            "map-init",
            "toc",
            "popups-default",
            "custominfo",
            "arcade-executor@^0.0.1"
        ]
    },
    "bundles": {
        "map-init": {
            "Config": {
                "basemaps": [{
                    "id": "streets",
                    "basemap": "streets-vector",
                    "title": "Strassen",
                    "selected": true
                }],
                "map": {
                    "layers": [
                        {
                            "title": "Bundesl√§nder",
                            "type": "AGS_FEATURE",
                            "url": "https://services2.arcgis.com/jUpNdisbWqRpMo35/ArcGIS/rest/services/LAN_ew_20/FeatureServer/0",
                            "outFields": ["*"]
                        },
                        {
                            "title": "PegelOnline",
                            "type": "AGS_FEATURE",
                            "url": "https://services2.arcgis.com/jUpNdisbWqRpMo35/ArcGIS/rest/services/PegelOnline/FeatureServer/0",
                            "outFields": ["*"],
                            "visible": false
                        }
                    ]
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 600000,
                        "ymin": 5800000,
                        "xmax": 1700000,
                        "ymax": 7600000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "popups": {
            "Config": {
                "dockEnabled": true,
                "dockingForced": true,
                "dockPosition": "bottom-left"
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "defaultToolSet",
                        "tools": ["*"],
                        "registerWidget": {
                            "widgetRole": "map_topleft"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "id": "sampleDescriptionTool",
                    "title": "Arcade",
                    "widgetSettings": {
                        "content": "<p>$feature.bez + \" \" + $feature.gen</p><p>Round(Area($feature, 'square-kilometers'), 2)</p><p>Round( $feature.ewz / $feature.kfl, 2)</p><p>$feature.longname+ \": \" + Round($feature.currentMeasure_value, 0) + \" \" + $feature.parameter_unit</p>",
                        "styleClass": "ctCopyrightContent",
                        "window": {
                            "marginBox": {
                                "w": 350,
                                "h": 300,
                                "t": 200,
                                "l": 150
                            }
                        }
                    },
                    "rules": {
                        "groups": "custominfo",
                        "activateOnStartup": false
                    }
                }
            ]
        }
    }
}
