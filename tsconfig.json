{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ES2020",
            "ESNext.Promise", // for Promise.any
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "node",
        "outDir": "./target",

        "strict": false,
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUncheckedIndexedAccess": true,
        "useUnknownInCatchVariables": false,

        "rootDir": ".",
        "baseUrl": "./src/main/js",
        "paths": {
            "*": ["bundles/*", "../../../node_modules/@conterra/ct-mapapps-typings/*"]
        },

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/main/js/**/*.ts",
        "src/main/js/**/*.ts.vue",
        "src/main/js/**/*.d.ts",
        "src/main/js/**/*.js",
        "node_modules/dojo-typings/index.d.ts",
    ]
}
